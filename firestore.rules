rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      // Hardcoded Owner UID and the secret role key for maximum security.
      // This is the master key to the system.
      let ownerUID = 'o2Vco2LqnvWsZijYtb4EDMNdOOC2';
      let ownerRoleKey = '**##owner_XwJfOW27AvfN5ELUzbUPpXPcbG73_locked##**';
      return userId == ownerUID && get(/databases/$(database)/documents/owner_$(ownerUID)/$(userId)).data.role == ownerRoleKey;
    }

    function isTheUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // =================================
    // Owner Collection Security
    // Most restrictive rules in the system.
    // =================================
    match /owner_o2Vco2LqnvWsZijYtb4EDMNdOOC2/{ownerId} {
      // READ: Only the owner can read their own document. No one else can.
      allow read: if isTheUser(ownerId) && isOwner(ownerId);
      
      // LIST: Absolutely forbidden. No one can list all owners.
      allow list: if false;

      // CREATE: Absolutely forbidden. New owners can only be created manually in the Firebase Console.
      allow create: if false;
      
      // UPDATE: Owner can only update specific, non-critical fields. They cannot change their role or UID.
      allow update: if isTheUser(ownerId) && isOwner(ownerId)
                    && request.resource.data.keys().hasOnly(['displayName', 'email', 'photoURL', 'pin', 'pinEnabled', 'role'])
                    && request.resource.data.role == resource.data.role; // Role cannot be changed.

      // DELETE: Absolutely forbidden. An owner cannot be deleted via the app.
      allow delete: if false;
    }

    // =================================
    // Customer & Shopkeeper Profiles
    // =================================
    match /{collection}/{userId} {
      // READ: Any signed-in user can read a profile (to see name/photo).
      allow read: if isSignedIn();

      // LIST: Forbidden for security. No one should be able to download a list of all users.
      allow list: if false;
      
      // CREATE: Anyone can create their own user profile document upon sign-up.
      allow create: if isTheUser(userId);
      
      // UPDATE: A user can only update their own document.
      allow update: if isTheUser(userId);
      
      // DELETE: Users are not allowed to delete their own accounts from the app.
      allow delete: if false;
    }
    
    // =================================
    // Transactions - The Ledger
    // Immutable and write-only for clients.
    // =================================
    match /transactions/{transactionId} {
      // READ: Only the customer and shopkeeper involved in the transaction can read it.
      allow read: if isSignedIn() && (
        resource.data.customerId == request.auth.uid || resource.data.shopkeeperId == request.auth.uid
      );
      
      // CREATE: Only signed-in users who are part of the transaction can create it.
      // Data must be valid (e.g., amount > 0).
      allow create: if isSignedIn() && 
                      (request.resource.data.customerId == request.auth.uid || request.resource.data.shopkeeperId == request.auth.uid) &&
                      request.resource.data.amount > 0 &&
                      request.resource.data.keys().hasAll(['amount', 'type', 'customerId', 'shopkeeperId', 'timestamp', 'notes', 'paymentGatewayId']) &&
                      request.resource.data.type in ['credit', 'payment'];
                      
      // UPDATE, DELETE: Absolutely forbidden. Once a transaction is recorded, it cannot be changed or deleted.
      allow update, delete: if false;
    }
    
    // =================================
    // Connection & Credit Requests
    // =================================
    match /connectionRequests/{requestId} {
      // Anyone involved can read the request.
      allow read: if isSignedIn() && (
        resource.data.customerId == request.auth.uid || resource.data.shopkeeperId == request.auth.uid
      );
      // Only the customer can create the request.
      allow create: if isTheUser(request.resource.data.customerId);
      // Only the shopkeeper can update the status (to approve/reject).
      allow update: if isTheUser(resource.data.shopkeeperId);
      allow delete: if false;
    }
    
    match /creditRequests/{requestId} {
       // Anyone involved can read the request.
      allow read: if isSignedIn() && (
        resource.data.customerId == request.auth.uid || resource.data.shopkeeperId == request.auth.uid
      );
      // The person requesting the credit is the one who can create it.
      allow create: if isTheUser(request.resource.data.get(request.resource.data.requestedBy + 'Id', ''));
      // The person receiving the request is the one who can update it.
      allow update: if (resource.data.requestedBy == 'customer' && isTheUser(resource.data.shopkeeperId)) || (resource.data.requestedBy == 'shopkeeper' && isTheUser(resource.data.customerId));
      allow delete: if false;
    }
    
    match /lock/{docId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}
