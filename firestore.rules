
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading the owner PIN for the lock screen, even if not authenticated.
    match /lock/{docId} {
      allow read: if true;
      allow write: if false; // Nobody can write to this from the client
    }

    // Secure user collections
    match /customers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /shopkeepers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /owners/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
