
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user has a specific role
    function isRole(role) {
      return exists(/databases/$(database)/documents/$(role)s/$(request.auth.uid));
    }

    // Owners can read/write their own document
    match /owners/{ownerId} {
      allow read, write: if request.auth.uid == ownerId;
    }

    // Shopkeepers can read/write their own document
    match /shopkeepers/{shopkeeperId} {
      allow read, write: if request.auth.uid == shopkeeperId;
    }
    
    // Customers can read/write their own document
    match /customers/{customerId} {
      allow read, write: if request.auth.uid == customerId;
    }

    // Lock document (for owner PIN) should only be readable by authenticated users
    // Write access should be restricted, e.g., only from a trusted server environment (not covered here for simplicity)
    match /lock/{pinId} {
      allow read: if request.auth != null;
      allow write: if false; // Lock down writes from client
    }
  }
}
